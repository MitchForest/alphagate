{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["apps/**/src/index.ts", "apps/**/src/index.tsx"],
      "linter": {
        "rules": {
          "suspicious": { "noConsole": "off" },
          "style": { "noMagicNumbers": "off" }
        }
      }
    },
    {
      "includes": ["ui/**/src/**/*.ts", "ui/**/src/**/*.tsx"],
      "linter": {
        "rules": {
          "performance": { "noNamespaceImport": "off", "noBarrelFile": "off" },
          "nursery": { "useSortedClasses": "off" },
          "style": { "noMagicNumbers": "off" },
          "suspicious": { "noEmptyBlockStatements": "off" }
        }
      }
    },
    {
      "includes": ["ui/**/src/**/*.css"],
      "linter": {
        "rules": {
          "suspicious": { "noUnknownAtRules": "off" }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "extends": ["ultracite"]
}
